{% extends 'base.html.twig' %}

{% block title %}
	Detail · CubeMarket
{% endblock %}


{% block body %}
	<style>
		.checked {
			color: orange;
		}
	</style>
	<div class="container mt-5">
		<div
			class="row">
			<!-- Product Images -->
			<div class="col-md-6 mb-4">
				<img src={{ asset(product.image.url) }} alt="Product" class="img-fluid rounded mb-3 product-image" id="mainImage">
			</div>

			<!-- Product Details -->
			<div class="col-md-6">
				<h2 class="mb-3">{{ product.name }}</h2>

				<div class="mb-3">
					<span class="h4 me-2">{{ product.price }}
						€</span>
				</div>
				<div class="mb-3">
					<span class="fa fa-star {% if rating >= 1 %}checked{% endif %}"></span>
					<span class="fa fa-star {% if rating >= 2 %}checked{% endif %}"></span>
					<span class="fa fa-star {% if rating >= 3 %}checked{% endif %}"></span>
					<span class="fa fa-star {% if rating >= 4 %}checked{% endif %}"></span>
					<span class="fa fa-star {% if rating >= 5 %}checked{% endif %}"></span>
					<span class="ms-2">{{ rating }} (120 reviews)</span>
				</div>
				<p class="mb-4">{{ product.description }}</p>
				<div class="mb-4">
					<h5>Color:</h5>
					<div class="btn-group" role="group" aria-label="Color selection">
						<input type="radio" class="btn-check" name="color" id="black" autocomplete="off">
						<label class="btn btn-outline-dark" for="black">Black</label>
						<input type="radio" class="btn-check" name="color" id="primary" autocomplete="off">
						<label class="btn btn-outline-secondary" for="silver">Primary</label>
						<input type="radio" class="btn-check" name="color" id="stickerless" autocomplete="off">
						<label class="btn btn-outline-primary" for="blue">stickerless</label>
					</div>
				</div>
				<div class="mb-4">
					<label for="quantity" class="form-label">Quantity:</label>
					<input type="number" class="form-control" id="quantity" value="1" min="1" style="width: 80px;">
				</div>
				<button class="btn btn-primary btn-lg mb-3 me-2">
					<i class="bi bi-cart-plus"></i>
					Add to Cart
				</button>
			</div>
		</div>
	</div>
{% endblock %}
